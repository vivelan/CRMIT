<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <description>This flow will update the fields Dimension A From in mm, Dimension A To in mm, Dimension B in mm.</description>
    <environments>Default</environments>
    <formulas>
        <name>ConversionRateForDimension</name>
        <dataType>Number</dataType>
        <expression>IF(
    ISPICKVAL( {!$Record.UnitOfMeasurement__c},&apos;MM&apos;), 
   1, 
    IF(
        ISPICKVAL( {!$Record.UnitOfMeasurement__c},&apos;Inch&apos;), 
        25.4,
        IF(
            ISPICKVAL( {!$Record.UnitOfMeasurement__c},&apos;Feet&apos;),
            304.8,
            null   
        )
    )
)</expression>
        <scale>3</scale>
    </formulas>
    <formulas>
        <name>ConvertDimensionAFrom</name>
        <dataType>Number</dataType>
        <expression>{!$Record.DimensionAFromUnit__c}*{!ConversionRateForDimension}</expression>
        <scale>3</scale>
    </formulas>
    <formulas>
        <name>ConvertDimensionATo</name>
        <dataType>Number</dataType>
        <expression>{!$Record.DimensionAToUnit__c}*{!ConversionRateForDimension}</expression>
        <scale>3</scale>
    </formulas>
    <formulas>
        <name>ConvertDimesnionB</name>
        <dataType>Number</dataType>
        <expression>{!$Record.DimensionBUnit__c}*{!ConversionRateForDimension}</expression>
        <scale>3</scale>
    </formulas>
    <interviewLabel>Update Dimensions in mm on OLI {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Update Dimensions in mm on OLI</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>FREE_FORM_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>UpdateDimensionAFrom</name>
        <label>UpdateDimensionAFrom</label>
        <locationX>613</locationX>
        <locationY>348</locationY>
        <connector>
            <targetReference>UpdateDimensionATo</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>DimensionAFromUnit__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <inputAssignments>
            <field>DimensionAFrom__c</field>
            <value>
                <elementReference>ConvertDimensionAFrom</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <recordUpdates>
        <name>UpdateDimensionATo</name>
        <label>UpdateDimensionATo</label>
        <locationX>619</locationX>
        <locationY>480</locationY>
        <connector>
            <targetReference>UpdateDimensionB</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>DimensionAToUnit__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <inputAssignments>
            <field>DimensionATo__c</field>
            <value>
                <elementReference>ConvertDimensionATo</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <recordUpdates>
        <name>UpdateDimensionB</name>
        <label>UpdateDimensionB</label>
        <locationX>622</locationX>
        <locationY>613</locationY>
        <filterLogic>and</filterLogic>
        <filters>
            <field>DimensionBUnit__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <inputAssignments>
            <field>DimensionB__c</field>
            <value>
                <elementReference>ConvertDimesnionB</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>490</locationX>
        <locationY>48</locationY>
        <connector>
            <targetReference>UpdateDimensionAFrom</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>UnitOfMeasurement__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <object>OpportunityLineItem</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
