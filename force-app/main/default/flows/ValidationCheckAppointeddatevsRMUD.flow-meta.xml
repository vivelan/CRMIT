    AND(
        MONTH({!GetRMUD.Rawmateriallastupdatedon__c}) = MONTH({!$Record.AppointedDayCalculation__c}),
       YEAR({!GetRMUD.Rawmateriallastupdatedon__c}) + 1  =    YEAR({!$Record.AppointedDayCalculation__c}) 
