ADDMONTHS({!GetRMUD.Rawmateriallastupdatedon__c},13),  
{!GetRMUD.Rawmateriallastupdatedon__c} + 
CASE(
  MOD(YEAR({!GetRMUD.Rawmateriallastupdatedon__c}), 4),
  0,
    CASE(
      MOD(YEAR({!GetRMUD.Rawmateriallastupdatedon__c}), 100),
      0,
        CASE(
          MOD(YEAR({!GetRMUD.Rawmateriallastupdatedon__c}), 400),
          0,
            366,
            365
        ),
      366
    ),
  365
)
)</expression>
