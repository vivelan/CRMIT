    <recordUpdates>
        <name>RecordUpdate</name>
        <label>RecordUpdate</label>
        <locationX>176</locationX>
        <locationY>360</locationY>
        <filterLogic>and</filterLogic>
        <filters>
            <field>VisitDateEnd__c</field>
            <operator>LessThan</operator>
            <value>
                <elementReference>$Flow.CurrentDate</elementReference>
            </value>
        </filters>
        <filters>
            <field>Status__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>In Planning</stringValue>
            </value>
        </filters>
        <inputAssignments>
            <field>ManualStatusChange__c</field>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Status__c</field>
            <value>
                <stringValue>Visited</stringValue>
            </value>
        </inputAssignments>
        <object>Visit__c</object>
    </recordUpdates>
    <start>
